<div class="index-content">
  <div class="d-flex flex-column align-items-center">
    <!-- dropdown -->
    <div class="dropdown-group">
      <button type="button" class="dropdown-toggle d-flex justify-content-between align-items-center"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <p class="flex-grow-1">類別</p>
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Separated link</a>
      </div>
    </div>
    <!-- total-expense -->
    <div class="total-expense d-flex">
      <p>總金額：</p>
      <span>25566</span>
    </div>
    <ul class="list-group">
      {{#each record}}
      <li class="list-group-item">
        <div class="list-box row d-flex justify-content-center justify-content-xs-between align-items-center">
          <div class="list-info col-auto d-flex align-items-center flex-grow-1">
            <div class="list-icon"><i class="{{this.category}}"></i></div>
            <div class="list-text flex-grow-1 mx-2">
              <p class="item">{{this.name}}</p>
              <p class="date">{{this.date}}</p>
            </div>
            <div class="list-expense">
              {{this.amount}}
            </div>
          </div>
          <div class="list-button col-auto">
            <button class="btn edit-button">編輯</button>
            <form action="" method:"POST" style="display: inline;">
              <!-- Button trigger modal -->
              <button type="button" class="btn delete-button" data-toggle="modal" data-target="#Modal">
                刪除
              </button>


            </form>
          </div>
      </li>
      {{/each}}
    </ul>

    <!-- 以後可能用到的Modal -->
    <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">確認提示</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            請問真的要刪除此項支出嗎？
          </div>
          <div class="modal-footer">
            <button type="button" class="btn modal-button cancel-button" data-dismiss="modal">取消</button>
            <button type="submit" class="btn modal-button delete-button">刪除</button>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>